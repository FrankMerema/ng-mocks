<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    RewriteCond %{HTTP:CF-Visitor} '{"scheme":"http"}'
    RewriteRule .* https://%{HTTP_HOST}%{REQUEST_URI} [L,R]
    RewriteCond %{HTTP:CF-Visitor} ^$
    RewriteCond %{HTTPS} !on
    RewriteRule .* https://%{HTTP_HOST}%{REQUEST_URI} [L,R]
</IfModule>

ErrorDocument 404 /404.html
