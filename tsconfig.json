{
  "extends": "./libs/ng-mocks/tsconfig.json",
  "compilerOptions": {
    "inlineSourceMap": false,
    "inlineSources": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "files": ["libs/ng-mocks/src/index.ts", "empty.ts", "karma-test-shim.ts", "karma.conf.ts"],
  "exclude": ["e2e", "node_modules"],
